/* pages/musiclist/musiclist.wxss */

.frontInfo{
  position: relative;
}
.front-text{
  position: absolute;
  bottom: 0;
  color: #fff;
}

.frontImg {
  background-repeat: no-repeat;
  background-position: top center;
  background-size: cover;
}

.frontImg::after {
  content: "";
  display: block;
  padding-top: 100%;
}
.front-tit,.front-dec{
  padding-left: 20rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 歌曲列表 */
.border_b{
  position: relative;
  border-bottom: 1px solid rgba(255, 255, 255, 0.15);
}

.border_t{
  position: relative;
  border-top: 1px solid rgba(255,255, 255, 0.15);
}
.toplist-song{
  padding-top: 22rpx;
}

.toplist-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  margin-left: 20rpx;
  padding-right: 30rpx;
  height: 120rpx;
}
.song-tit, .song-dec {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.song-tit{
  font-size: 36rpx;
  font-weight: 400;
  line-height: 50rpx;
  color: #fff;
}
.song-dec{
  font-size: 28rpx;
  align-items: center;
  color: rgba(255, 255, 255, 0.6);
}